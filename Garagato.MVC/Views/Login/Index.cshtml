@{
}

<div class="h-full flex justify-center items-center">

    <div class="p-10 shadow-lg rounded-lg w-[90%] md:w-[70%] lg:w-[40%] bg-white">
        
        <h2 class="text-2xl font-bold text-center mb-2 text-dark">¡Bienvenido!</h2>
       
        <form asp-action="Login" asp-controller="Login" method="post" class="flex flex-col gap-4">
  
            <div class="flex flex-col">
                <label class="text-gray-700 mb-1" for="username">Nombre de usuario: </label>
                <input id="username" name="username" required type="text" class="border border-gray-500 p-2 rounded focus:outline-none focus:ring-2 focus:ring-red-500">
            </div>

            <div class="flex flex-col">
                <label class="text-gray-700 mb-1" for="password">Contraseña: </label>
                <input id="password" name="password" required type="password" class="border border-gray-500 p-2 rounded focus:outline-none focus:ring-2 focus:ring-red-500">
            </div>

            <button type="submit" class="bg-secondary font-semibold text-white py-2 px-4 rounded hover:border-[#2E294E] hover:bg-[#F46036] hover:text-white">Iniciar Sesión</button>
        </form>

        <a href="/register/index" class="text-secondary font-semibold py-2 px-4 mt-4 w-full rounded text-center block border-2 border-[#D7263D] hover:border-[#F46036] hover:bg-[#F46036] hover:text-white">
            Registrarse
        </a>

    </div>

</div>

