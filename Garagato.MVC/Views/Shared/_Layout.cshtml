<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Garagato.MVC</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Garagato.MVC.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-primary flex flex-col h-screen">

    <header class="bg-secondary p-5 w-full">
        <h1 class="text-white text-2xl font-bold">Garagato</h1>
    </header>

     <main role="main" class="flex-1">
        @RenderBody()
     </main>


    <footer class="footer text-muted bg-dark p-5 w-full">
        <div class="text-xl font-bold text-white text-center">
            &copy; 2024 - Garagato.MVC
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
